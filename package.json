{
  "name": "momai-traders-website",
  "version": "2.0.0",
  "description": "Professional wholesale housekeeping solutions website for Momai Traders - Super Stockist & Wholesale Supplier",
  "scripts": {
    "dev": "concurrently \"npm run tailwind:watch\" \"npm run serve\"",
    "tailwind:watch": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "tailwind:build": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "serve": "live-server --port=8080 --watch=dist/output.css,index.html,clients.html",
    "build": "npm run tailwind:build",
    "start": "npm run dev"
  },
  "keywords": [
    "housekeeping",
    "cleaning",
    "wholesale",
    "super-stockist",
    "momai-traders"
  ],
  "author": "Jigar Prajapati",
  "license": "ISC",
  "devDependencies": {
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "live-server": "^1.2.2",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/aspect-ratio": "^0.4.2"
  }
}
